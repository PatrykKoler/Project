        </Separator>
        <Separator HorizontalAlignment="Left" Height="18" Margin="230,3,0,0" VerticalAlignment="Top" Width="19" RenderTransformOrigin="0.5,0.5" Background="White">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Separator HorizontalAlignment="Left" Height="18" Margin="153,3,0,0" VerticalAlignment="Top" Width="19" RenderTransformOrigin="0.5,0.5" Background="White">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Frame x:Name="Main" HorizontalAlignment="Center" Height="290" Margin="0,29,0,0" VerticalAlignment="Center" Width="548" ScrollViewer.VerticalScrollBarVisibility="Auto" NavigationUIVisibility="Hidden"/>
        <TextBlock x:Name="timeLbl" HorizontalAlignment="Left" Margin="492,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="46" TextAlignment="Right" LineHeight="18" Foreground="#FFA83333" FontWeight="Bold" Text="" FontSize="11" FontStyle="Italic"/>
        <TextBlock x:Name="dateLbl" HorizontalAlignment="Left" Margin="382,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="98" TextAlignment="Right" LineHeight="18" Foreground="#FFA83333" FontWeight="Bold" Text="" FontStyle="Italic"/>
        <Separator HorizontalAlignment="Left" Height="18" Margin="481,-1,0,0" VerticalAlignment="Top" Width="14" RenderTransformOrigin="0.5,0.5" Background="#FFA83333" Foreground="#FFA83333">
